<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/login_site_iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@mipmap/icon_delete" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <EditText
                android:id="@+id/login_site_et_url"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:hint="demo.akaxin.com"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="#ff696969"
                android:textSize="16sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/login_site_btn_conn"
        android:layout_width="66dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_btn_login_blue"
        android:text="@string/conn"
        android:textColor="@color/white" />


    <Button
        android:id="@+id/login_site_btn_demo"
        style="@style/BaseLoginGrayButton"
        android:text="@string/try_out_to_demo_site" />

</RelativeLayout>