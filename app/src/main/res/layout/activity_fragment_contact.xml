<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg"
    android:orientation="vertical">

    <com.akaxin.client.view.IndexFastScrollRecyclerView
        android:id="@+id/member_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:setIndexBarColorRes="@color/fastScrollBackgroundWhite"
        app:setIndexBarTextColorRes="@color/textBlack"
        app:setIndexBarHighlightTextColorRes="@color/colorPrimary"
        app:setIndexbarMargin="0" />

</FrameLayout>