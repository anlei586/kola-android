<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <include layout="@layout/view_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/personal_item_pubkey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:id="@+id/pubKeyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_small"
                    android:layout_marginEnd="@dimen/space_mid"
                    android:layout_marginStart="@dimen/space_mid"
                    android:layout_marginTop="@dimen/space_small"
                    android:gravity="center_vertical"
                    android:text="@string/user_id_pubk"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>


            <TextView
                android:id="@+id/pubKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/space_mid"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/text_small"
                tools:text="Blah blah blah blah blah blah blah blah blah blah ..." />

            <LinearLayout
                android:id="@+id/personal_item_priKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/priKeyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_small"
                    android:layout_marginEnd="@dimen/space_mid"
                    android:layout_marginStart="@dimen/space_mid"
                    android:layout_marginTop="@dimen/space_small"
                    android:text="@string/user_id_prik"
                    android:textSize="@dimen/text_small" />


            </LinearLayout>

            <TextView
                android:id="@+id/priKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/space_mid"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/text_small"
                android:visibility="gone"
                tools:text="Blah blah blah blah blah blah blah blah blah blah ..." />

        </LinearLayout>

    </ScrollView>

</LinearLayout>