<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tool_layout"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginStart="@dimen/space_small"
    android:layout_marginEnd="@dimen/space_small"
    android:layout_marginTop="@dimen/space_small"
    android:layout_marginBottom="@dimen/space_mid"
    android:background="?selectableItemBackgroundBorderless"
    style="@style/pluginLayoutStyle">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/tool_icon"
        style="@style/Style.MsgPlugin.Icon"
        android:src="@color/placeholder" />

    <TextView
        android:id="@+id/tool_label"
        android:layout_below="@id/tool_icon"
        style="@style/Style.MsgPlugin.Label"
        tools:text="图像" />

</RelativeLayout>