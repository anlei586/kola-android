<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/divider_width"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/space_small"
    android:paddingEnd="@dimen/space_small"
    android:paddingStart="@dimen/space_contact_item_padding"
    android:paddingTop="@dimen/space_small">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contact_avatar"
        android:layout_width="@dimen/size_avatar_big"
        android:layout_height="@dimen/size_avatar_big"
        android:layout_marginEnd="@dimen/space_contact_item_padding"
        android:src="@color/placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.text.emoji.widget.EmojiTextView
            android:id="@+id/apply_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/text_normal"
            tools:text="GoodBoy" />


        <android.support.text.emoji.widget.EmojiTextView
            android:id="@+id/apply_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textAlphaGray"
            android:textSize="@dimen/text_small"
            tools:text="Add me please!" />

    </LinearLayout>

    <Button
        android:id="@+id/apply_friend"
        style="@style/ZalyButton.Inline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/action_add_confirm"
        android:textSize="@dimen/text_small" />

</LinearLayout>