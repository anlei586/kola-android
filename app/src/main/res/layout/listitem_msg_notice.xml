<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    style="@style/MsgItemStyle">

    <TextView
        android:id="@+id/notice_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/space_tiny"
        android:paddingBottom="@dimen/space_tiny"
        android:paddingStart="@dimen/space_small"
        android:paddingEnd="@dimen/space_small"
        android:layout_gravity="center"
        android:background="@drawable/bg_msg_tip"
        android:textColor="@color/textWhite"
        android:textSize="@dimen/text_msg_notification"
        android:maxWidth="@dimen/width_msg_content_max"
        android:gravity="center"
        tools:text="安国跃邀请张君, 范臻, 崔坤, Vivian Wang, Alex, Bob, and many other people 进入了群聊"/>

</LinearLayout>