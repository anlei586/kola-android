<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_body"
    style="@style/Widget.MessageBubble.Received"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">


    <ImageView
        android:id="@+id/content_img"
        style="@style/Style.MessageItem.Image"
        android:adjustViewBounds="true"
        android:src="@color/placeholder" />

    <ImageView
        android:id="@+id/secured"
        style="@style/Style.Icon.TopSecret.Received"
        android:layout_width="15dp"
        android:layout_height="18dp"
        android:layout_gravity="end|top"
        android:background="@drawable/bg_secret_image_icon_receive"
        android:padding="@dimen/space_tiny"
        android:visibility="gone"
        tools:visibility="visible" />


</FrameLayout>