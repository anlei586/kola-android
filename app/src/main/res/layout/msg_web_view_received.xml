    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/msg_plugin_webview"
    android:visibility="visible">

    <com.akaxin.client.view.ZalyWebView
        android:id="@+id/webview_received"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/secured"
            style="@style/Style.Icon.TopSecret.Received"
            android:layout_marginStart="@dimen/space_tiny"
            android:layout_marginTop="@dimen/space_tiny"
            android:visibility="gone" />

    </com.akaxin.client.view.ZalyWebView>
</FrameLayout>