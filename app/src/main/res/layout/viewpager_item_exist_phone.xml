<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="18dp"
        android:background="@color/white"
        app:cardCornerRadius="6dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="22dp"
                android:text="请输入手机号码"
                android:textColor="@color/black"
                android:textSize="34sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:text="此站点开启了手机认证，需要获取你的手机号"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:orientation="horizontal"
                android:paddingHorizontal="40dp">


                <TextView
                    android:id="@+id/vp_exit_phone_tv_show_phone_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+86"
                    android:textColor="#cc000000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/vp_exit_phone_tv_show_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="152-3540-3538"
                    android:textColor="#cc000000"
                    android:textSize="24sp" />
            </LinearLayout>

            <Button
                android:id="@+id/vp_exit_phone_btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="46dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_btn_login_blue"
                android:text="同意，授权并登录"
                android:textColor="@color/white" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>