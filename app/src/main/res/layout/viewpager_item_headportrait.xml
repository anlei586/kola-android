<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="18dp"
        android:background="@color/white"
        app:cardCornerRadius="6dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="22dp"
                android:text="编辑个人信息"
                android:textColor="@color/black"
                android:textSize="34sp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/vp_headportrait_avtor"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/space_mid"
                android:layout_marginTop="32dp"
                android:foreground="@drawable/ic_foreground_change_avatar"
                android:src="@drawable/avatar_user_default" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="点击图片设置头像" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/vp_headportrait_et_nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="35dp">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入昵称"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="16sp" />


            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/vp_headportrait_btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="46dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/bg_btn_site_manage"
                android:text="下一步"
                android:textColor="@color/white" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>